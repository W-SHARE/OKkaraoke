<!DOCTYPE html>
<html>
  <head>
    <title>Okkaraoke</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css">

    <%= favicon_link_tag 'favicon.ico' %>
    <link href="<%= image_path("iosHomeIcon.png") %>" rel="icon" sizes="192x192" type="image/png" />
    <link href="<%= image_path("iosHomeIcon.png") %>" rel="apple-touch-icon" sizes="180x180" type="image/png" />

  </head>
  <body>
    <script type="text/javascript">
      $(document).ready(function() {
        $('#is-open').hide();
        $('.navi').hide();
        $('#is-close').click(function(){
          $('#is-open').show();
          $('#is-close').hide();
          $('.navi').show();
        });
        $('#is-open').click(function(){
          $('#is-open').hide();
          $('#is-close').show();
          $('.navi').hide();
        });
      });
  </script>
    <header>
      <div class="hamburger-menu" id="is-open">
        <%= image_tag 'hamburger-menu-cross.png'%>
      </div>
      <div class="hamburger-menu" id="is-close">
        <%= image_tag 'hamburger-menu-icon.png'%>
      </div>
    </header>
    <div class="navi">
      <ul>
        <p>メニュー</p>
        <li><%= link_to 'トップページ', '/' %></li>
        <li><%= link_to 'カラオケを検索', '/search' %></li>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
